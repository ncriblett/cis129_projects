average = 0
product = 1
smallNum = 9999
largeNum = -9999

for i in range (4):
    myNum = int(input('Enter a number: '))
    sum += myNum
    product *= myNum
    if myNum < smallNum:
        smallNum = myNum
    if myNum > largeNum:
        largeNum = myNum

print(f'Sum: {sum}')
print(f'Product: {product}')
print(f'Largest: {largeNum}')
print(f'Smallest: {smallNum}')
print(f'Average: {sum / 4:.2f}')
